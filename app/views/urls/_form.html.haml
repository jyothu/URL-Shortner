= form_for @url, html: { class: "form form-horizontal url" } do |f|
  .form-group
    = f.label :original_url, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :original_url, class: 'form-control', required: true
    = f.error_span(:original_url)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), urls_path, :class => 'btn btn-default'

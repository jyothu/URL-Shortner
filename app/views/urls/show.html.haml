- model_class = Url
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:original_url) + ':'
  %br
  = @url.original_url
%p
  %strong= model_class.human_attribute_name(:shortened_url) + ':'
  %br
  = @url.shortened_url
%p
  %strong= model_class.human_attribute_name(:created_by) + ':'
  %br
  = @url.created_by


= link_to t('.back', default: t("helpers.links.back")), urls_path, class: 'btn btn-default'
= link_to t('.destroy', default: t("helpers.links.destroy")), url_path(@url), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
